BoxLayout:
    orientation: "vertical"
    Slider:
        id: speed_slider
        size_hint: [1, 0.1]
        min: 0
        max: 1
        value: 0.5
    BoxLayout:
        size_hint: [1, 0.9]
        FieldWidget:
            id: field_widget
            agol_logic: app.logic
            colors: COLORS
        GraphWidget:
            id: graph_widget
            agol_logic: app.logic
            colors: COLORS
            get_height_by_kind_quantity: lambda quantity: log2(1 + quantity)
